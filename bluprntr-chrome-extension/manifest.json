{
  "manifest_version": 2,
  "name": "BluPrntr",
  "version": "0.2",
  "permissions": [
    "declarativeContent",
    "notifications",
    "storage",
    "tabs",
    "<all_urls>",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "BluPrntr"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
